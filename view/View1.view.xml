<mvc:View
    controllerName="naruto.splitapptask.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="_IDGenPage1" title="Orders">
        <SplitApp id="SplitApp" >

            <masterPages>
                <Page id="_IDGenPage" title="Orders">
                    
                    <VBox id="_IDGenVBox3" class="sapUiSmallMargin">
                        <Title id="_IDGenTitle3" text="Orders" level="H2"/>
                        <Text id="orderCountText" text="Total Orders: 0" class="sapUiSmallMarginBottom"/>
                    </VBox>

                    <List id="_IDGenList1" items="{/Orders}" itemPress=".onItemPress" mode="SingleSelectMaster">
                        <ObjectListItem id="_IDGenObjectListItem"  title="Order {OrderID}"  intro="{CustomerName}"  number="{OrderedDate}" 
                                        numberUnit="" 
                                        numberState="None" 
                                        type="Active">
                            <firstStatus>
                                <ObjectStatus id="_IDGenObjectStatus" text="{Status}" />
                            </firstStatus>
                            <attributes>
                                <ObjectAttribute id="_IDGenObjectAttribute" title="Shipped" text="{ShippedDate}" />
                            </attributes>
                        </ObjectListItem>
                    </List>
                </Page>
            </masterPages>

            <detailPages>
                <Page id="detailPage" title="Order Details">
                    <VBox id="_IDGenVBox" class="sapUiSmallMargin">
                        <Title id="_IDGenTitle" text="Order {OrderID}" level="H2" />
                        <Text id="_IDGenText1" text="Customer: {CustomerName}" />
                        <Text id="_IDGenText2" text="Ordered: {OrderedDate}" />
                        <Text id="_IDGenText3" text="Shipped: {ShippedDate}" />
                        <Text id="_IDGenText4" text="Price: {Price}" />
                        <Text id="_IDGenText5" text="Status: {Status}" class="sapUiSmallMarginBottom" />

                        <Toolbar id="_IDGenToolbar">
                            <Title id="_IDGenTitle1" text="Shipping Address" level="H3" />
                        </Toolbar>
                        <VBox id="_IDGenVBox1" class="sapUiSmallMarginBegin">
                            <Text id="_IDGenText6" text="Name: {ShippingAddress/Name}" />
                            <Text id="_IDGenText7" text="Street: {ShippingAddress/Street}" />
                            <Text id="_IDGenText8" text="ZIP Code: {ShippingAddress/ZipCode}" />
                            <Text id="_IDGenText9" text="City: {ShippingAddress/City}" />
                            <Text id="_IDGenText10" text="Region: {ShippingAddress/Region}" />
                            <Text id="_IDGenText11" text="Country: {ShippingAddress/Country}" />
                        </VBox>

                        <Toolbar id="_IDGenToolbar1" class="sapUiSmallMarginTop">
                            <Title id="_IDGenTitle2" text="Line Items" level="H3" />
                        </Toolbar>
                        <Table id="lineItemsTable" items="{LineItems}">
                            <columns>
                                <Column id="_IDGenColumn"><Text id="_IDGenText" text="Product" /></Column>
                                <Column id="_IDGenColumn1"><Text id="_IDGenText12" text="Product ID" /></Column>
                                <Column id="_IDGenColumn2"><Text id="_IDGenText13" text="Unit Price" /></Column>
                                <Column id="_IDGenColumn3"><Text id="_IDGenText14" text="Quantity" /></Column>
                                <Column id="_IDGenColumn4"><Text id="_IDGenText15" text="Total" /></Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem">
                                    <cells>
                                        <Text id="_IDGenText16" text="{Product}" />
                                        <Text id="_IDGenText17" text="{ProductID}" />
                                        <Text id="_IDGenText18" text="{UnitPrice}" />
                                        <Text id="_IDGenText19" text="{Quantity}" />
                                        <Text id="_IDGenText20" text="{Total}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </Page>
            </detailPages>

        </SplitApp>
    </Page>
</mvc:View>
