<mvc:View
    controllerName="naruto.splitapptask.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="mainPage">

        <SplitApp id="SplitApp">

            <masterPages>
                <Page id="masterPage" title="Orders">

                    <HBox id="_IDGenHBox" class="sapUiSmallMargin">
                        <Text id="orderCountText" text="Total Orders: 0" />
                    </HBox>

                    <HBox id="_IDGenHBox1">
                        <SearchField id="searchField"
                                     liveChange=".onSearch"
                                     placeholder="Search by Order ID, Customer Name, or Category" />
                        <Button id="_IDGenButton" icon="sap-icon://filter" press=".onOpenfilter" />
                        <Button id="btnClearFilter" icon="sap-icon://reset" press=".onClearFilter" />
                    </HBox>

                    <List id="orderList"
                          items="{/Orders}"
                          itemPress=".onItemPress"
                          mode="SingleSelectMaster"
                          updateFinished=".onUpdateFinish">

                        <ObjectListItem id="_IDGenObjectListItem" title="Order {OrderID}"
                                        intro="{CustomerName}"
                                        number="{Category}"
                                        type="Active">

                            <firstStatus>
                                <ObjectStatus id="_IDGenObjectStatus" text="{Status}"
                                    state="{= ${Status} === 'In time' ? 'Success' :
                                                ${Status} === 'Urgent' ? 'Error' : 'Warning'}" />
                            </firstStatus>

                            <attributes>
                                <ObjectAttribute id="_IDGenObjectAttribute" title="Shipped" text="{ShippedDate}" />
                            </attributes>

                        </ObjectListItem>

                    </List>
                </Page>
            </masterPages>


            <detailPages>

                <Page id="detailPage_CP" title="Computer Peripherals Details">
                    <IconTabBar id="_IDGenIconTabBar" expandable="false" selectedKey="info">

                        <items>
                            <IconTabFilter id="_IDGenIconTabFilter" key="info" text="Order Info" icon="sap-icon://order-status">
                                <VBox id="_IDGenVBox1" class="sapUiSmallMargin">

                                    <Title id="_IDGenTitle" text="Order ID: {OrderID}" level="H2" />
                                    <Text id="_IDGenText" text="Customer: {CustomerName}" />
                                    <Text id="_IDGenText1" text="Price: {Price}" />
                                    <Text id="_IDGenText2" text="Warranty Included: Yes" />

                                </VBox>
                            </IconTabFilter>

                            <IconTabFilter id="_IDGenIconTabFilter1" key="address" text="Shipping Address" icon="sap-icon://shipping-status">
                                <VBox id="_IDGenVBox2" class="sapUiSmallMargin">

                                    <Text id="_IDGenText3" text="Name: {ShippingAddress/Name}" />
                                    <Text id="_IDGenText4" text="Street: {ShippingAddress/Street}" />
                                    <Text id="_IDGenText5" text="City: {ShippingAddress/City}" />
                                    <Text id="_IDGenText6" text="Country: {ShippingAddress/Country}" />

                                </VBox>
                            </IconTabFilter>

                            <IconTabFilter id="_IDGenIconTabFilter2" key="items" text="Line Items" icon="sap-icon://cart">
                                <Table id="_IDGenTable" items="{LineItems}">
                                    <columns>
                                        <Column id="_IDGenColumn"><Text id="_IDGenText7" text="Product" /></Column>
                                        <Column id="_IDGenColumn1"><Text id="_IDGenText8" text="Quantity" /></Column>
                                        <Column id="_IDGenColumn2"><Text id="_IDGenText9" text="Total" /></Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem id="_IDGenColumnListItem">
                                            <cells>
                                                <Text id="_IDGenText10" text="{Product}" />
                                                <Text id="_IDGenText11" text="{Quantity}" />
                                                <Text id="_IDGenText12" text="{Total}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </IconTabFilter>
                        </items>

                    </IconTabBar>
                </Page>


                <Page id="detailPage_MB" title="Mobile Order Details">
                    <IconTabBar id="_IDGenIconTabBar1" expandable="false" selectedKey="info">

                        <items>
                            <IconTabFilter id="_IDGenIconTabFilter3" key="info" text="Order Info" icon="sap-icon://order-status">
                                <VBox id="_IDGenVBox3" class="sapUiSmallMargin">

                                    <Title id="_IDGenTitle1" text="Order ID: {OrderID}" level="H2" />
                                    <Text id="_IDGenText13" text="Customer: {CustomerName}" />
                                    <Text id="_IDGenText14" text="Price: {Price}" />
                                    <Text id="_IDGenText15" text="Includes Insurance: Yes" />

                                </VBox>
                            </IconTabFilter>

                            <IconTabFilter id="_IDGenIconTabFilter4" key="address" text="Shipping Address" icon="sap-icon://shipping-status">
                                <VBox id="_IDGenVBox4" class="sapUiSmallMargin">
                                    <Text id="_IDGenText16" text="Name: {ShippingAddress/Name}" />
                                    <Text id="_IDGenText17" text="City: {ShippingAddress/City}" />
                                    <Text id="_IDGenText18" text="Region: {ShippingAddress/Region}" />
                                </VBox>
                            </IconTabFilter>

                            <IconTabFilter id="_IDGenIconTabFilter5" key="items" text="Line Items" icon="sap-icon://cart">
                                <Table id="_IDGenTable1" items="{LineItems}">
                                    <columns>
                                        <Column id="_IDGenColumn3"><Text id="_IDGenText19" text="Product" /></Column>
                                        <Column id="_IDGenColumn4"><Text id="_IDGenText20" text="Quantity" /></Column>
                                        <Column id="_IDGenColumn5"><Text id="_IDGenText21" text="Total" /></Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem id="_IDGenColumnListItem1">
                                            <cells>
                                                <Text id="_IDGenText22" text="{Product}" />
                                                <Text id="_IDGenText23" text="{Quantity}" />
                                                <Text id="_IDGenText24" text="{Total}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </IconTabFilter>
                        </items>

                    </IconTabBar>
                </Page>


                <Page id="detailPage_MS" title="Music System Order Details">
                    <IconTabBar id="_IDGenIconTabBar2" expandable="false" selectedKey="info">

                        <items>
                            <IconTabFilter id="_IDGenIconTabFilter6" key="info" text="Order Info" icon="sap-icon://order-status">
                                <VBox id="_IDGenVBox5" class="sapUiSmallMargin">
                                    <Title id="_IDGenTitle2" text="Order ID: {OrderID}" level="H2" />
                                    <Text id="_IDGenText25" text="Customer: {CustomerName}" />
                                    <Text id="_IDGenText26" text="Price: {Price}" />
                                    <Text id="_IDGenText27" text="Free Speakers Included ðŸŽµ" />
                                </VBox>
                            </IconTabFilter>

                            <IconTabFilter id="_IDGenIconTabFilter7" key="address" text="Shipping Address" icon="sap-icon://shipping-status">
                                <VBox id="_IDGenVBox6" class="sapUiSmallMargin">
                                    <Text id="_IDGenText28" text="Name: {ShippingAddress/Name}" />
                                    <Text id="_IDGenText29" text="Street: {ShippingAddress/Street}" />
                                    <Text id="_IDGenText30" text="City: {ShippingAddress/City}" />
                                </VBox>
                            </IconTabFilter>

                            <IconTabFilter id="_IDGenIconTabFilter8" key="items" text="Line Items" icon="sap-icon://cart">
                                <Table id="_IDGenTable2" items="{LineItems}">
                                    <columns>
                                        <Column id="_IDGenColumn6"><Text id="_IDGenText31" text="Product" /></Column>
                                        <Column id="_IDGenColumn7"><Text id="_IDGenText32" text="Quantity" /></Column>
                                        <Column id="_IDGenColumn8"><Text id="_IDGenText33" text="Total" /></Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem id="_IDGenColumnListItem2">
                                            <cells>
                                                <Text id="_IDGenText34" text="{Product}" />
                                                <Text id="_IDGenText35" text="{Quantity}" />
                                                <Text id="_IDGenText36" text="{Total}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </IconTabFilter>
                        </items>

                    </IconTabBar>
                </Page>


                <Page id="detailPage_NoData" title="No Details Available">
                    <VBox id="_IDGenVBox8" class="sapUiSmallMargin" justifyContent="Center" alignItems="Center" height="100%">
                        <Text id="_IDGenText37" text="No Data Found" class="sapUiLargeMargin" />
                    </VBox>
                </Page>

            </detailPages>

        </SplitApp>
    </Page>
</mvc:View>
