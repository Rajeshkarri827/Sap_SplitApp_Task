<mvc:View
    controllerName="naruto.splitapptask.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="mainPage" >
 
        <SplitApp id="SplitApp">

            <masterPages>
                <Page id="masterPage" title="Orders"  >
                       <HBox id="_IDGenVBox" class="sapUiSmallMargin">
                        <Text id="orderCountText" text="Total Orders: 0" class="sapUiSmallMarginBottom" />
                       </HBox>
                    <SearchField id="searchField" liveChange=".onSearch"  placeholder="Search by Order ID, Customer Name, or Category" />
                        
                    <List id="_IDGenList1" items="{/Orders}" itemPress=".onItemPress" mode="SingleSelectMaster"  updateFinished=".onUpdateFinish">
                        <ObjectListItem id="_IDGenObjectListItem"  title="Order {OrderID}" intro="{CustomerName}" number="{Category}" type="Active">
                            <firstStatus>
                                <ObjectStatus id="_IDGenObjectStatus" text="{Status}" state="{= ${Status} === 'In time' ? 'Success' : ${Status} === 'Urgent' ? 'Error' : 'Warning'}"/>
                            </firstStatus>
                            <attributes>
                                <ObjectAttribute id="_IDGenObjectAttribute" title="Shipped" text="{ShippedDate}" />
                            </attributes>
                        </ObjectListItem>
                    </List>
                </Page>
            </masterPages>

            <detailPages>

                <Page id="detailPage_CP" title="Computer Peripherals Details">
                    <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                        <Title id="_IDGenTitle1" text="Order ID: {OrderID}" level="H2"/>
                        <Text id="_IDGenText1" text="Customer: {CustomerName}"/>
                        <Text id="_IDGenText2" text="Price: {Price}"/>
                        <Text id="_IDGenText3" text="Warranty Included: Yes " class="sapUiSmallMarginBottom"/>
                        <Toolbar id="_IDGenToolbar">
                            <Title id="_IDGenTitle2" text="Shipping Address" level="H3"/>
                        </Toolbar>
                        <VBox id="_IDGenVBox2" class="sapUiSmallMarginBegin">
                            <Text id="_IDGenText4" text="Name: {ShippingAddress/Name}"/>
                            <Text id="_IDGenText5" text="Street: {ShippingAddress/Street}"/>
                            <Text id="_IDGenText6" text="City: {ShippingAddress/City}"/>
                            <Text id="_IDGenText7" text="Country: {ShippingAddress/Country}"/>
                        </VBox>
                        <Toolbar id="_IDGenToolbar1" class="sapUiSmallMarginTop">
                            <Title id="_IDGenTitle3" text="Line Items" level="H3"/>
                        </Toolbar>
                        <Table id="_IDGenTable" items="{LineItems}">
                            <columns>
                                <Column id="_IDGenColumn"><Text id="_IDGenText8" text="Product"/></Column>
                                <Column id="_IDGenColumn1"><Text id="_IDGenText9" text="Quantity"/></Column>
                                <Column id="_IDGenColumn2"><Text id="_IDGenText10" text="Total"/></Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem">
                                    <cells>
                                        <Text id="_IDGenText11" text="{Product}"/>
                                        <Text id="_IDGenText12" text="{Quantity}"/>
                                        <Text id="_IDGenText13" text="{Total}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </Page>

                <Page id="detailPage_MB" title="Mobile Order Details">
                    <VBox id="_IDGenVBox3" class="sapUiSmallMargin">
                        <Title id="_IDGenTitle4" text="Order ID: {OrderID}" level="H2"/>
                        <Text id="_IDGenText14" text="Customer: {CustomerName}"/>
                        <Text id="_IDGenText15" text="Price: {Price}"/>
                        <Text id="_IDGenText16" text="Includes Insurance: Yes " class="sapUiSmallMarginBottom"/>
                        <Toolbar id="_IDGenToolbar2">
                            <Title id="_IDGenTitle5" text="Shipping Address" level="H3"/>
                        </Toolbar>
                        <VBox id="_IDGenVBox4" class="sapUiSmallMarginBegin">
                            <Text id="_IDGenText17" text="Name: {ShippingAddress/Name}"/>
                            <Text id="_IDGenText18" text="City: {ShippingAddress/City}"/>
                            <Text id="_IDGenText19" text="Region: {ShippingAddress/Region}"/>
                        </VBox>
                        <Toolbar id="_IDGenToolbar3" class="sapUiSmallMarginTop">
                            <Title id="_IDGenTitle6" text="Line Items" level="H3"/>
                        </Toolbar>
                        <Table id="_IDGenTable1" items="{LineItems}">
                            <columns>
                                <Column id="_IDGenColumn3"><Text id="_IDGenText20" text="Product"/></Column>
                                <Column id="_IDGenColumn4"><Text id="_IDGenText21" text="Quantity"/></Column>
                                <Column id="_IDGenColumn5"><Text id="_IDGenText22" text="Total"/></Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1">
                                    <cells>
                                        <Text id="_IDGenText23" text="{Product}"/>
                                        <Text id="_IDGenText24" text="{Quantity}"/>
                                        <Text id="_IDGenText25" text="{Total}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </Page>

                <Page id="detailPage_MS" title="Music System Order Details">
                    <VBox id="_IDGenVBox5" class="sapUiSmallMargin">
                        <Title id="_IDGenTitle7" text="Order ID: {OrderID}" level="H2"/>
                        <Text id="_IDGenText26" text="Customer: {CustomerName}"/>
                        <Text id="_IDGenText27" text="Price: {Price}"/>
                        <Text id="_IDGenText28" text="Free Speakers Included ðŸŽµ" class="sapUiSmallMarginBottom"/>
                        <Toolbar id="_IDGenToolbar4">
                            <Title id="_IDGenTitle8" text="Shipping Address" level="H3"/>
                        </Toolbar>
                        <VBox id="_IDGenVBox6" class="sapUiSmallMarginBegin">
                            <Text id="_IDGenText29" text="Name: {ShippingAddress/Name}"/>
                            <Text id="_IDGenText30" text="Street: {ShippingAddress/Street}"/>
                            <Text id="_IDGenText31" text="City: {ShippingAddress/City}"/>
                        </VBox>
                        <Toolbar id="_IDGenToolbar5" class="sapUiSmallMarginTop">
                            <Title id="_IDGenTitle9" text="Line Items" level="H3"/>
                        </Toolbar>
                        <Table id="_IDGenTable2" items="{LineItems}">
                            <columns>
                                <Column id="_IDGenColumn6"><Text id="_IDGenText32" text="Product"/></Column>
                                <Column id="_IDGenColumn7"><Text id="_IDGenText33" text="Quantity"/></Column>
                                <Column id="_IDGenColumn8"><Text id="_IDGenText34" text="Total"/></Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem2">
                                    <cells>
                                        <Text id="_IDGenText35" text="{Product}"/>
                                        <Text id="_IDGenText36" text="{Quantity}"/>
                                        <Text id="_IDGenText37" text="{Total}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </Page>

            </detailPages>

        </SplitApp>
    </Page>
</mvc:View>
